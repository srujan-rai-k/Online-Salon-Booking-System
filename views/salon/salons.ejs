<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/salon/salons.css" />
  </head>
<body>
<header><%-include('../includes/navigation.ejs')%></header>

<div id="search-box">
  <div class="footer-newsletter">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <h4>Search your favourite saloon</h4>
          <form action="" method="post">
            <input type="text" name="search" placeholder="Search your fourite salon"><input type="submit" value="Search">
          </form>
        </div>
      </div>
    </div>
  </div>
  </div> 

  <section id="team" class="team section-bg">
    <div class="salonlist">

      <div class="section-title">
        <h2>Shops</h2>
      </div>

      <div class="row">
        <% salons.forEach(s=>{ %>
         <div class="col-lg-12" id="lists">
          <div class="member d-flex align-items-start">
            <div class="pic"><img src="https://res.cloudinary.com/dkxhnyynn/image/upload/v1610476615/<%=s.img_filename%>" alt="Salon photo" class="img-fluid">
            </div>
            <div class="member-info">
              <h4><%=s.name%></h4>
              <span><%=s.city%></span>
               <p>Connect with shop</p>
              <div class="social">
                <a href=""><i class="fa fa-twitter"></i></a>
                <a href=""><i class="fa fa-facebook"></i></a>
                <a href=""><i class="fa fa-instagram"></i></a>
                <a href=""> <i class="fa fa-linkedin"></i> </a>
              </div>
            </div>
            <% if(customer) { %>
              <a class="booksaloon" href="/salon/salon_info/<%=s.id%>">Book Appointment</a>  
            <% } %>
          </div>
        </div>
      <% }) %>
      </div>
    </div>
  </section>

  <footer id="footer">
    <div class="footer-top">
      <div class="container">
        <div class="row">

          <div class="col-lg-3 col-md-6 footer-contact">
            <h3>Address</h3>
            <p>
              The National Institute of Engineering <br>
              Ashokapuram Mysore<br>
              Karnataka <br><br>
              <strong>Phone:</strong> +91 55555 55555<br>
              <strong>Email:</strong> <a href="mailto:bookmysalon@gmail.com">bookmysalon@gmail.com</a><br>
            </p>
          </div>

          <div class="col-lg-3 col-md-6 footer-links">
            <h4>Useful Links</h4>
            <ul>
              <li><a href="#">Home</a></li>
              <li><a href="#">About us</a></li>
              <li><a href="#">Services</a></li>
              <li><a href="#">Terms of service</a></li>
              <li><a href="#">Privacy policy</a></li>
            </ul>
          </div>

          <div class="col-lg-3 col-md-6 footer-links">
            <h4>Our Services</h4>
            <ul>
              <li><a href="/salon/signup">Register salon</a></li>
              <li><a href="#">Advertisement</a></li>
              <li><a href="#">Blogs</a></li>
            </ul>
          </div>

          <div class="col-lg-3 col-md-6 footer-links">
            <h4>Our Social Networks</h4>
            <p>Follow us in all our social media handles to get in touch with us</p>
            <div class="social-links mt-3">
              <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
              <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
              <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
              <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
            </div>
          </div>

        </div>
      </div>
    </div>

  </footer><!-- End Footer -->

</body>

</html>


