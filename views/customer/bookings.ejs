    <div class="container">
      <h2 class="text-center user-booking">My Bookings</h2>
        <table class="table">
          <thead class="table-dark">
            <tr>
              <th scope="col">Salon Name</th>
              <th scope="col">Date of Booking</th>
              <th scope="col">Slot</th>
              <th scope="col">Price</th>
              <th scope="col">Services</th>
            </tr>
          </thead>
          <tbody>
              <%bookings.forEach(b=>{%>
              <tr>
                <th scope="row"><%=b.salon%></th>
                <td><%=b.date%></td>
                <td><%=b.slot%></td>
                <td>Rs.<%=b.total_price%></td>
                <td><%b.services.forEach(s=>{ %>
                    <%=s%>, 
                  <%})%>
                </td>
              </tr>
              <%})%>
          </tbody>
        </table>
